#include <bits/stdc++.h>
using namespace std;


int birthdayCakeCandles(int candles[], int size){
   int tallest = candles[size-1];
   int cnt=0;
   for(int i=size-1;candles[i]==tallest;i--){
     cnt++;
   } 
    return cnt;
}

int main() {
   int n;
   cin >> n;
   int arr[n];
   for(int i=0;i < n;i++){
    cin >> arr[i];
   }
   sort(arr, arr + n); 
   cout << birthdayCakeCandles(arr, n);
 return 0;
}
